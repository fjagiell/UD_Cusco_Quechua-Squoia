rule mergens {
  pattern {
    V [xpos=Root];
    NS [upos=NS];
    V -[ns]-> NS;
  }

  commands {
    V.form = V.form + NS.form;
    V.VerbForm = NS.VerbForm;

    shift NS ==> V;
    del_node NS;
  }
}
 
rule cas { 
  pattern {
    Root [xpos=Root];
    C [upos=Cas];
    C -[s.arg]-> Root;
  }
  commands{
    Root.form = Root.form + C.form;
    Root.Case = C.Case;
    
    shift C ==> Root;
    del_node C;
  }
}

rule suffix {
  pattern { 
    Root [xpos=Root];
    Suffix [xpos=SUFFIX];
    Root -[s.poss.subj]-> Suffix;
  }
  commands{
    Root.form = Root.form + Suffix.form;
    shift Suffix ==> Root;
    del_node Suffix;
  }
}

rule suffix2 {
