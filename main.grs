rule vderiv {
  pattern{
    Root [xpos=Root];
    Vderiv [xpos=VDeriv];
    Root -> Vderiv;
  }
  commands{
    Root.form = Root.form + Vderiv.form;
    shift Vderiv ==> Root;
    del_node Vderiv;
  }
}
strat main { Seq (Onf(mergens), Onf(suffix),Onf(suffix2), Onf(suffix3),Onf(cas), Onf(vderiv)) }
